<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane stylesheets="@styles.css"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.battleship.controller.StartController">

    <Region styleClass="dark-overlay" />

    <VBox fx:id="mainContainer" alignment="CENTER" spacing="25.0" maxWidth="900">

        <VBox alignment="CENTER" spacing="5.0">
            <Label text="PIRATES OF THE CARIBBEAN" styleClass="title-label" />

            <Region minHeight="5.0" />

            <Label text="LA MALDICIÓN DEL PERLA NEGRA" styleClass="subtitle-epic" />

            <Label text="Tactical Naval Warfare" styleClass="subtitle-tagline" />
        </VBox>

        <Region minHeight="30.0" />

        <VBox alignment="CENTER" spacing="15.0" maxWidth="350.0">
            <Label text="NICKNAME DEL CAPITÁN"
                   style="-fx-text-fill: #cfb53b; -fx-font-weight: bold; -fx-font-family: 'Cinzel';"/>

            <TextField fx:id="nicknameField" promptText="Ej: Jack Sparrow..." alignment="CENTER"/>
        </VBox>

        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets top="20.0" />
            </padding>

            <Button text="ZARPAR (NUEVO JUEGO)" onAction="#onNewGame"
                    prefWidth="280.0" styleClass="button"/>

            <Button text="BITÁCORA (CARGAR)" onAction="#onLoadGame"
                    prefWidth="280.0" styleClass="button"/>
        </VBox>

    </VBox>

    <VBox alignment="BOTTOM_CENTER" pickOnBounds="false">
        <padding>
            <Insets bottom="15.0"/>
        </padding>
        <Label text="v1.0.0 - Developed by Martin ." styleClass="credits-label"/>
    </VBox>

</StackPane>